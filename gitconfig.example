[user]
	name = Your Name
	email = your_email@example.com
[alias]
	co = checkout
	br = branch
	ci = commit
	st = status
	unstage = reset HEAD --
	last = log -1 HEAD
        tr = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
        lg = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
[core]
	excludesfile = ~/.gitignore
	editor = ~/bin/vim
[diff]
	external = ~/bin/git_diff_tool
[merge]
        external = ~/bin/git_diff_tool
	conflictstyle = diff3
[pager]
      diff =
[mergetool]
	keepBackup = true
[push]
	default = simple
	followTags = true

